
<br><br><br>
<div class="row">
  <div class="col s8 m8 l8 offset-s2 offset-m2 offset-l2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- Card BEGIN-->
    <div class="card">
      <div class="card-content">
        <div class="row">
          <div class="col s12 m12 l12">
            <div class="input-field">
              <%= f.label "E-mail" %>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="row" style="margin-bottom: 0px;">
          <div class="col s12 m12 l12">
            <div class="input-field">
              <%= f.label :senha %>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="row">
          <div class="col right">
            <div class="input-field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Lembrar' %>
            </div>
          </div>
        </div>
        <% end -%>
        <div class="actions center-align">
          <button class="btn waves-effect waves-light light-blue accent-3 s12 m12 l12" type="submit" name="action">Entrar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </div>
    <!-- Card END -->
    <% end %>
  </div>
</div>
