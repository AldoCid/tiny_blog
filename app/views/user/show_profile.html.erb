<div class="card">
  <div class="card-header blue lighten-3">
    <br>
    <% if @user.avatar %>
      <div class="center">
          <%= image_tag @user.avatar.url(:medium),class:"circle responsive-img" %>
      </div>
    <% else %>
      <img class="circle responsive-img" src="https://lh3.googleusercontent.com/-W2XryVdi-lA/U6tSAh3SsbI/AAAAAAAAFGY/ZHJiUEcR_Zs/w480-h480/avatar%2Bmaterial%2Bdesign.png" alt="" />
    <% end %>
    <br>
    <div class="center flow-text">
      <%= @user.name %>
    </div>
  </div>
  <div class="card-content blue lighten-4">
    <ul class="inline center">
      <li>
      <%= link_to show_user_posts_path,method: :get,class:"waves-effect waves-light light-blue accent-3 btn" do %>
      Postagens<i class="material-icons left">dashboard</i>
      <% end %>
    </li>
      <li>
        <%= link_to show_user_followers_path,method: :get,class:"waves-effect waves-light light-blue accent-3 btn" do %>
          Seguidores<i class="material-icons left">supervisor_account</i>
        <% end %>
      </li>
      <li>
        <%= link_to edit_user_registration_path,method: :get,class:"waves-effect waves-light light-blue accent-3 btn" do %>
          Editar<i class="material-icons left">mode_edit</i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
