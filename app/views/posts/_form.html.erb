<h2>Criar postagem</h2>
<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :post_image %>
    <%= f.file_field :post_image %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Postar" ,class:"waves-effect waves-light light-blue accent-3 btn"%>
  </div>
<% end %>
